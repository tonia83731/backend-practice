<form action="/todos" method="POST" class="flex flex-col">
  <div class="w-full grid grid-cols-3 gap-4 my-2">
    <input type="text" placeholder="name" name="name" class="col-span-2">
    <select name="type" id="type">
      <option value="home">Home</option>
      <option value="work">Work</option>
      <option value="others">Others</option>
    </select>
  </div>
  <textarea name="description" id="description" rows="2" class="resize-none"></textarea>
  <button type="submit">Create</button>
</form>
<ul>
  {{#each todos}}
  <li>
    {{this.name}} {{this.type}}
    <a href="./todos/{{this._id}}">detail</a>
    <a href="./todos/{{this._id}}/edit">edit</a>
  </li>
  {{/each}}
</ul>